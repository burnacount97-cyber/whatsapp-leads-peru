rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if user has superadmin role in user_roles collection OR matches specific emails
    function isSuperAdmin() {
      return request.auth != null && (
        (exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'superadmin') ||
        request.auth.token.email == 'bum.acount97@gmail.com'
      );
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isDocOwner(docData) {
      return request.auth != null && docData.user_id == request.auth.uid;
    }

    function isLeadOwner(docData) {
      return request.auth != null && docData.client_id == request.auth.uid;
    }
    
    // User Roles - Highly sensitive
    match /user_roles/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin();
      allow write: if isSuperAdmin(); 
    }
    
    // Profiles
    match /profiles/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin();
      allow write: if isOwner(userId) || isSuperAdmin();
    }
    
    // Widget Configs
    match /widget_configs/{configId} {
      allow read: if true; // Public for the widget to load
      allow write: if request.auth != null && (isDocOwner(request.resource.data) || isSuperAdmin());
    }
    
    // Leads
    match /leads/{leadId} {
      allow read: if request.auth != null && (isLeadOwner(resource.data) || isSuperAdmin());
      allow create: if true; // Public for widget script
      allow update, delete: if request.auth != null && (isLeadOwner(resource.data) || isSuperAdmin());
    }
    
    // Blocked IPs
    match /blocked_ips/{ipId} {
      allow read: if true; // Widget needs to check this
      allow create: if true; // API/Widget can block
      allow delete: if request.auth != null; // Owners/Admins can unblock
    }
    
    // Analytics
    match /analytics/{analyticsId} {
      allow read: if request.auth != null; // Simplified list access
      allow create: if true; // Public tracking
      allow delete: if isSuperAdmin();
    }
    
    // Payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && (isDocOwner(resource.data) || isSuperAdmin());
      allow create: if request.auth != null;
      allow update, delete: if isSuperAdmin();
    }
  }
}
